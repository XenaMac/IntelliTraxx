@model Base_AVL.ViewModels.Vehicle_Driver
@{
    ViewBag.Title = "Add Setting";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="container-fluid col-lg-10 col-lg-offset-1">

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.Vehicle.VehicleFriendlyName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Vehicle.VehicleFriendlyName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Driver Name: ", htmlAttributes: new { @class = "control-label col-md-2" } )
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Driver.DriverFirstName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</div>