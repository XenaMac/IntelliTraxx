@{
    ViewBag.Company = @System.Configuration.ConfigurationManager.AppSettings["companyName"];
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="body-content" id="loginbg" >
        <div class="container-fluid text-center">
            <h1>IntelliTraxx - @ViewBag.Company</h1>
        </div>
        <div class="text-center">
            <small>IntelliTraxx solutions are available from any <A href="https://cradlepoint.com/partners/partner-locator" target="_blank">Authorized Cradlepoint Reseller</A></small>
        </div>
        @RenderBody()
        <hr />
        <footer>
            <div class="col-lg-6">
                <p>&copy; @DateTime.Now.Year - <a href="http://www.xenatech.com" target="_blank">XenaTech, LLC.</a></p>
            </div>
            <div class="col-lg-6">
                <em><p class="pull-right"><a href="~/Home/TermsAndConditions">Terms of Use</a></p></em>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Html.Partial("_Toastr")
    @RenderSection("scripts", required: false)
</body>
</html>

